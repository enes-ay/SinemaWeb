<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sinema Film Sitesi</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body style="background-color: #e0d5f1;">
  <%-include("partials/nav.ejs") %>

    <div class="container" style="padding: 0;">

      <div class="categories">
        <ul class="nav justify-content-center">
          <% categories.forEach(category => { %>
            <li class="nav-item">
              <a class="nav-link" href="/movies/category/<%= category._id %>"><%= category.name %></a>
            </li>
         
          <% }) %>
        </ul>
      </div>
      <div class="movieList" style="padding: 65px; background-color: #e0d5f1;">

        <div class="row">

          <% for (movie of movies) { %>
            <div class="col-lg-3 col-mt-1 ma_bottom-30">
              <div class="lightbox" style="margin: 3px; padding: 4px;">
                <a href="/movies/<%= movie._id %>">

                  <img style="width: 210px; height: 260px;" src="<%= movie.poster_url %>" alt="<%= movie.name %>">

                </a>
              </div>

            </div>

            <% } %>
        </div>


      </div>
    </div>
    </div>

    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"></script>
</body>

</html>