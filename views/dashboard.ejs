<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
  </head>
  <body style="background-color: #e0d5f1">
    <%- include("partials/nav.ejs") %>

    <div class="container">
      <h1 id="greeting_dashboard">Hoş geldin <%= user.username %></h1>
      <div class="dashboard">
      <div class="row" style="float: right">
        <div class="col">
          <button
            style="min-width: 200px"
            class="btn_movieUpload"
            data-toggle="modal"
            data-target="#updateModal"
          >
            Film Yükle
          </button>
        </div>
      </div>
      <div class="row">
        <% for (movie of movies) { %>
        <div class="col-lg-4 col-mt-6 ma_bottom-30">
             <div class="lightbox" style="margin: 3px; padding: 4px;">

            <a href="/movies/<%= movie._id %>">
              <img width="210px" height="270px" src="<%= movie.poster_url %>" alt="<%= movie.name %>" />
            </a>
          </div>
        </div>

        <% } %>
      </div>

      <div
        id="updateModal"
        class="modal fade bd-example-modal-lg"
        tabindex="-1"
        role="dialog"
        aria-labelledby="myLargeModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-md">
          <div class="modal-content">
            <div
              class="modal-header"
              style="display: flex; justify-content: end"
            >
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div
              style="padding-top: 30px; padding-bottom: 30px"
              class="container"
            >
              <div class="row">
                <div class="col-md-12">
                  <div class="text_align_center">
                    <h2
                      style="
                        font-size: 25px;
                        margin-bottom: 20px;
                        justify-content: center;
                        display: flex;
                        color: #5e3ad4;
                      "
                    >
                      Film Yükleme
                    </h2>
                  </div>
                </div>
                <div class="col-md-10 offset-md-1">
                  <form
                    id="request"
                    class="main_form"
                    method="POST"
                    action="/movies"
                    enctype="multipart/form-data"
                  >
                    <div class="row">
                      <div class="col-md-12">
                        <input
                          value=""
                          class="form_control"
                          placeholder="Film Adı"
                          type="text"
                          name="name"
                        />
                      </div>
                      <div class="col-md-12">
                        <select class="form_control" name="category">
                          <option value="cat1" selected>Kategori Seç</option>
                          <% categories.forEach(category=> { %>
                          <option value="<%= category._id %>"><%= category.name %></option>

                          <% }) %>
                        </select>
                      </div>
                      <div class="col-md-12">
                        <textarea
                          value=""
                          class="form_control"
                          placeholder="Özet"
                          type="text"
                          name="description"
                          rows="5"
                        ></textarea>
                      </div>
                      <div class="col-md-12">
                        <input
                          value=""
                          class="form_control"
                          placeholder="Yıl"
                          type="text"
                          name="year"
                        />
                      </div>
                      <div class="col-md-12">
                        <input
                          value=""
                          class="form_control"
                          placeholder="Yönetmen"
                          type="text" 
                          name="director"
                        />
                      </div>
                      <div style="margin-bottom: 20px" class="col-md-12">
                        <h6>Afiş Yükle</h6>
                        <input
                          type="file"
                          name="image"
                          class="form-control-file"
                        />
                      </div>

                      <div class="col-md-12">
                        <div class="group_form">
                          <button class="btn_movieUpload">Filmi Yükle</button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>

    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
